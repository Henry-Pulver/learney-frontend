core {
  active-bg-size: 0;
}

node {
  content: data(name);
  opacity: 1;
  text-wrap: wrap;
}

node:child {
  color: #e2e8f0;
  width: 48px;
  height: 48px;
  min-zoomed-font-size: 1.25em;
  z-index: 10;
  text-max-width: 180;
}

node:child:selected {
  min-zoomed-font-size: 0;
  background-color: white;
  font-size: 0px;
  z-index: 9999;
}

node:parent {
  color: white;
  text-valign: center;
  text-halign: center;
  font-size: 8em;
  z-index: 1;
  text-wrap: wrap;
  text-max-width: 240px;
  compound-sizing-wrt-labels: exclude;
  padding: 80px;
  border-width: 0;
  min-width: 400px;
  min-height: 400px;
  shape: round-rectangle;
}

edge {
  min-zoomed-font-size: 12;
  font-size: 8;
  color: #fff;
  width: 10;
  curve-style: haystack;
  mid-target-arrow-shape: triangle;
  mid-target-arrow-color: lightgrey;
  haystack-radius: 0;
}

edge.path {
  mid-target-arrow-color: #93C5FD;
}

edge.learned {
  mid-target-arrow-color: #34D399;
}

edge[line_name] {
  content: data(line_name);
}

.eh-preview {
  opacity: 0;
}

.eh-ghost {
  label: "";
}